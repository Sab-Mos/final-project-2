<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="cross browser suite" parallel="tests" thread-count="4">
 <test name="Desktop Chromium">

   <parameter name="device" value="desktop"></parameter>

   <parameter name="browserType" value="chrome"></parameter>

     <packages>
         <package name="ge.tbc.testautomation.tests"/>
     </packages>
 </test>

    <test name="Desktop firefox">

        <parameter name="device" value="desktop"></parameter>

        <parameter name="browserType" value="firefox"></parameter>

        <packages>
            <package name="ge.tbc.testautomation.tests"/>
        </packages>
    </test>

    <test name="Desktop Webkit">

        <parameter name="device" value="desktop"></parameter>

        <parameter name="browserType" value="safari"></parameter>

        <packages>
            <package name="ge.tbc.testautomation.tests"/>
        </packages>
    </test>

    <test name="Mobile Chromium">

        <parameter name="device" value="mobile"></parameter>

        <parameter name="browserType" value="chrome"></parameter>

        <packages>
            <package name="ge.tbc.testautomation.tests"/>
        </packages>
    </test>

</suite>